{{#if usuario}}
<h1>Atualizar cadastro:</h1>
<form action="/usuarios/{{usuario.id}}/update" method="post">
{{else}}
<h1>Cadastre-se:</h1>
<form action="/usuarios/novo" method="post">
{{/if}}
  <div>
    <label for="nickname">Nickname</label>
    <input type="text" value="{{usuario.nickname}}" id="nickname" name="nickname" />
  </div>
  <div>
    <label for="nome">Nome</label>
    <input type="text" value="{{usuario.nome}}" id="nome" name="nome" />
  </div>
  <input type="submit" value="{{#if usuario}}Salvar{{else}}Cadastrar{{/if}}" />
</form>